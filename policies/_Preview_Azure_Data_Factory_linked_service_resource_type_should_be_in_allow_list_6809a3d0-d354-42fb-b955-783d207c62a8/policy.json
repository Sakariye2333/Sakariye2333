     "DynamicsCrm",
     "FileServer",
     "FtpServer",
     "GitHub",
     "GoogleCloudStorage",
     "Hdfs",
     "Hive",
     "HttpServer",
     "Informix",
     "Kusto",
     "MicrosoftAccess",
     "MySql",
     "Netezza",
     "Odata",
     "Odbc",
     "Office365",
